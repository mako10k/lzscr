{
  "scopeName": "source.lzscr",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#binding"
    },
    {
      "include": "#lambda"
    },
    {
      "include": "#type-annotations"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#member"
    },
    {
      "include": "#record"
    },
    {
      "include": "#reserved"
    },
    {
      "include": "#punctuation"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.lzscr",
          "match": "#.*$"
        },
        {
          "name": "comment.block.lzscr",
          "begin": "\\{-",
          "end": "-\\}",
          "patterns": [
            {
              "include": "#comments"
            }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.lzscr",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.lzscr",
              "match": "\\\\[nrt\\\\\"']"
            }
          ]
        },
        {
          "name": "string.quoted.single.lzscr",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.lzscr",
              "match": "\\\\[nrt\\\\\"']"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.lzscr",
          "match": "\\b0x[0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.lzscr",
          "match": "\\b0b[01]+\\b"
        },
        {
          "name": "constant.numeric.float.lzscr",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.lzscr",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.lzscr",
          "match": "\\b(let|in|if|then|else|match|with|fun|rec|handle|resume)\\b"
        }
      ]
    },
    "type-annotations": {
      "patterns": [
        {
          "name": "meta.type.annotation.lzscr",
          "begin": "%\\{",
          "beginCaptures": {
            "0": {
              "name": "keyword.operator.type.begin.lzscr"
            }
          },
          "end": "\\}",
          "endCaptures": {
            "0": {
              "name": "keyword.operator.type.end.lzscr"
            }
          },
          "patterns": [
            {
              "include": "#type-annotations"
            },
            {
              "name": "entity.name.type.lzscr",
              "match": "[A-Z][A-Za-z0-9_]*"
            },
            {
              "name": "variable.other.type.lzscr",
              "match": "[a-z_][A-Za-z0-9_]*"
            },
            {
              "include": "#operators"
            },
            {
              "include": "#punctuation"
            }
          ]
        },
        {
          "name": "meta.type.prefix.lzscr",
          "match": "%([A-Z][A-Za-z0-9_]*)",
          "captures": {
            "1": {
              "name": "entity.name.type.lzscr"
            }
          }
        }
      ]
    },
    "lambda": {
      "patterns": [
        {
          "name": "meta.lambda.lzscr",
          "begin": "\\\\",
          "beginCaptures": {
            "0": {
              "name": "keyword.operator.lambda.backslash.lzscr"
            }
          },
          "end": "->",
          "endCaptures": {
            "0": {
              "name": "keyword.operator.lambda.arrow.lzscr"
            }
          },
          "patterns": [
            {
              "name": "variable.parameter.lzscr",
              "match": "[A-Za-z_][A-Za-z0-9_]*"
            },
            {
              "name": "variable.parameter.tilde.lzscr",
              "match": "~[A-Za-z_][A-Za-z0-9_]*"
            },
            {
              "name": "constant.language.wildcard.lzscr",
              "match": "_"
            },
            {
              "include": "#member"
            },
            {
              "include": "#operators"
            }
          ]
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.or.lzscr",
          "match": "\\|\\|"
        },
        {
          "name": "keyword.operator.caret.catch.lzscr",
          "match": "\\^\\|"
        },
        {
          "name": "keyword.operator.raise.caret-paren.lzscr",
          "match": "\\^\\("
        },
        {
          "name": "keyword.operator.bind.arrow.lzscr",
          "match": "<-"
        },
        {
          "name": "keyword.operator.lambda.arrow.lzscr",
          "match": "->"
        },
        {
          "name": "keyword.operator.float.compare.lte.lzscr",
          "match": "\\.<="
        },
        {
          "name": "keyword.operator.float.compare.gte.lzscr",
          "match": "\\.>="
        },
        {
          "name": "keyword.operator.compare.eq.lzscr",
          "match": "=="
        },
        {
          "name": "keyword.operator.compare.neq.lzscr",
          "match": "!="
        },
        {
          "name": "keyword.operator.compare.lte.lzscr",
          "match": "<="
        },
        {
          "name": "keyword.operator.compare.gte.lzscr",
          "match": ">="
        },
        {
          "name": "keyword.operator.float.compare.lt.lzscr",
          "match": "\\.<"
        },
        {
          "name": "keyword.operator.float.compare.gt.lzscr",
          "match": "\\.>"
        },
        {
          "name": "keyword.operator.assignment.equals.lzscr",
          "match": "="
        },
        {
          "name": "keyword.operator.compare.ltgt.lzscr",
          "match": "[<>]"
        },
        {
          "name": "keyword.operator.float.mul.lzscr",
          "match": "\\.\\*"
        },
        {
          "name": "keyword.operator.float.div.lzscr",
          "match": "\\.\/"
        },
        {
          "name": "keyword.operator.float.add.lzscr",
          "match": "\\.\\+"
        },
        {
          "name": "keyword.operator.float.sub.lzscr",
          "match": "\\.-"
        },
        {
          "name": "keyword.operator.raise.caret.lzscr",
          "match": "\\^"
        },
        {
          "name": "keyword.operator.pipe.alt.lzscr",
          "match": "\\|"
        },
        {
          "name": "keyword.operator.lambda.backslash.lzscr",
          "match": "\\\\"
        },
        {
          "name": "keyword.operator.tilde.ref.lzscr",
          "match": "~{1,2}"
        },
        {
          "name": "keyword.operator.bang.effect.lzscr",
          "match": "!"
        },
        {
          "name": "keyword.operator.type.percent.lzscr",
          "match": "%"
        },
        {
          "name": "keyword.operator.math.lzscr",
          "match": "[+\\-*/]"
        },
        {
          "name": "keyword.operator.cons.colon.lzscr",
          "match": ":"
        }
      ]
    },
    "member": {
      "patterns": [
        {
          "name": "meta.constructor.lzscr",
          "match": "\\.([A-Z][A-Za-z0-9_]*)",
          "captures": {
            "1": {
              "name": "entity.name.type.constructor.lzscr"
            }
          }
        },
        {
          "name": "meta.member.access.lzscr",
          "match": "\\.([a-z_][A-Za-z0-9_]*)",
          "captures": {
            "1": {
              "name": "variable.other.member.lzscr"
            }
          }
        }
      ]
    },
    "record": {
      "patterns": [
        {
          "name": "meta.record.field.lzscr",
          "match": "(?<!\\.)\\b([A-Za-z_][A-Za-z0-9_]*)\\s*(:)",
          "captures": {
            "1": {
              "name": "variable.other.property.lzscr"
            },
            "2": {
              "name": "punctuation.separator.key-value.lzscr"
            }
          }
        }
      ]
    },
    "binding": {
      "patterns": [
        {
          "name": "meta.binding.lzscr",
          "begin": "^\\s*(?:~[A-Za-z_][A-Za-z0-9_]*(?:\\s+~[A-Za-z_][A-Za-z0-9_]*)*)\\s*(?==)",
          "end": "=",
          "beginCaptures": {
            "0": {
              "name": "keyword.operator.assignment.context.lzscr"
            }
          },
          "endCaptures": {
            "0": {
              "name": "keyword.operator.assignment.equals.lzscr"
            }
          },
          "patterns": [
            {
              "name": "variable.parameter.tilde.lzscr",
              "match": "~[A-Za-z_][A-Za-z0-9_]*"
            }
          ]
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.comma.lzscr",
          "match": ","
        },
        {
          "name": "punctuation.terminator.semicolon.lzscr",
          "match": ";"
        },
        {
          "name": "punctuation.section.braces.begin.lzscr",
          "match": "\\{"
        },
        {
          "name": "punctuation.section.braces.end.lzscr",
          "match": "\\}"
        },
        {
          "name": "punctuation.section.brackets.begin.lzscr",
          "match": "\\["
        },
        {
          "name": "punctuation.section.brackets.end.lzscr",
          "match": "\\]"
        },
        {
          "name": "punctuation.section.parens.begin.lzscr",
          "match": "\\("
        },
        {
          "name": "punctuation.section.parens.end.lzscr",
          "match": "\\)"
        }
      ]
    },
    "reserved": {
      "patterns": [
        {
          "name": "invalid.illegal.reserved.lzscr",
          "match": "[@$]"
        }
      ]
    }
  }
}